{
    "name": "nocart/e2e-tests",
    "description": "E2E Tests for Nocart Microservices",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Nocart\\E2E\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nocart\\E2E\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "/var/www/shared"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-json": "*",
        "nocart/shared-kernel": "@dev",
        "symfony/http-client": "^7.2",
        "symfony/uid": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test:e2e": "phpunit --testsuite=E2E"
    }
}

